---
const { variant = "primary", size = "medium" } = Astro.props;
const buttonStyling = "text-[var(--offwhite)] py-5 px-6 rounded-lg border-2 border-[var(--orange)] rounded md transition ease-in-out uppercase";
const variantClasses = {
    "primary": "hover:bg-[var(--orange)]",
    "secondary": ""
};

const sizeClasses = {
    "large": "text-4xl",
    "medium":"text-2xl",
    "small":"text-xs"
};
---
<div>
    <button class:list={[buttonStyling, variantClasses[variant], sizeClasses[size]]}><slot /></button>
</div>